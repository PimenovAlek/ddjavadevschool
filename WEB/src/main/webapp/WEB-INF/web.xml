<?xml version="1.0" encoding="UTF-8" ?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>UserPositionServlet</servlet-name>
    <servlet-class>dz.servlet.web.UserPositionServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CompanyUnitServlet</servlet-name>
    <servlet-class>dz.servlet.web.CompanyUnitServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EmployeeCardServlet</servlet-name>
    <servlet-class>dz.servlet.web.EmployeeCardServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GetAllCompanyUnitsServlet</servlet-name>
    <servlet-class>dz.servlet.web.GetAllCompanyUnitsServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GetAllEmployeeCardsServlet</servlet-name>
    <servlet-class>dz.servlet.web.GetAllEmployeeCardsServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GetAllUserPositionServlet</servlet-name>
    <servlet-class>dz.servlet.web.GetAllUserPositionServlet</servlet-class>
  </servlet>


  <servlet-mapping>
    <servlet-name>UserPositionServlet</servlet-name>
    <url-pattern>/user_position</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CompanyUnitServlet</servlet-name>
    <url-pattern>/company_unit</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GetAllCompanyUnitsServlet</servlet-name>
    <url-pattern>/all_company_units</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EmployeeCardServlet</servlet-name>
    <url-pattern>/employee_card</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GetAllEmployeeCardsServlet</servlet-name>
    <url-pattern>/all_employee_cards</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GetAllUserPositionServlet</servlet-name>
    <url-pattern>/all_user_positions</url-pattern>
  </servlet-mapping>

  <display-name>hrsys</display-name>
</web-app>

